% caption style
\usepackage{caption}
\captionsetup{font=small,labelfont=bf} % caption font 
\captionsetup[sub]{font=scriptsize,labelfont=bf}
\captionsetup[sub]{aboveskip=0pt, belowskip=0pt}
\captionsetup[table]{belowskip=0pt} % spacing between text and table caption
\captionsetup[table]{aboveskip=3pt} % spacing between table caption and table
\captionsetup[figure]{belowskip=-5pt} % spacing between figure caption and text below
\captionsetup[figure]{aboveskip=5pt} % spacing between figure caption and figure above

